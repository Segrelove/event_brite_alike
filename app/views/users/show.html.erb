<div class="container mx-auto">
  <table class="table table-striped mt-4" style="background-color: #e3f2fd;">
    <thead>
      <tr>
        <th scope="col"><%= current_user.id %></th>
        <th scope="col"><%= current_user.first_name %></th>
        <th scope="col"><%= current_user.email %></th>

      </tr>
    </thead>
    <tbody>
    <% @event.each do |event| %>
        <tr>
        <% if current_user.id == event.admin_id %>
          <th scope="row"><%= event.id %></th>
          <td><%= event.title %></td>
          <td><%= event.description %></td>
          <td><%= event.admin_id %></td>
          <% else %>
          <% end %>
      </tr>
    <% end %>
    </tbody>
    </table>
    </div>